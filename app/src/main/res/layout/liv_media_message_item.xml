<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/liv_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/liv_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.goldarmor.live800lib.ui.view.RoundPhotomageView.RoundViewdoPhotomageView
                android:id="@+id/liv_chat_show_say"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                tools:background="#000" />

            <ImageView
                android:id="@+id/liv_type_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/liv_video_message_play_button_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/liv_text_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/liv_progress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>