<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liv_root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="您对当前的客服服务满意吗？"
        android:textColor="@color/liv_chating_accept_text_color"
        android:textSize="14sp" />

    <ScrollView
        android:id="@+id/liv_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- android:divider="#F2F2F2" -->

            <ListView
                android:id="@+id/liv_lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:divider="@null"
                android:minHeight="96dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:background="#FFF" >

        <EditText
            android:id="@+id/liv_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:background="@null"
            android:gravity="top|left"
            android:hint="写下您对我们的建议"
            android:textColor="@color/liv_chating_accept_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/liv_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:enabled="false"
            android:padding="8dp"
            android:text="200"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>